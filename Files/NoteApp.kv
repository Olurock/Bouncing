MainScreen:

<MainScreen>:
    canvas.before:
        Color:
            rgba:(.3,.2,.7,1)
        Rectangle:
            size:self.width,self.height
    BoxLayout:
        Button:
            text: 'Check Saved Note'
            on_press: root.manager.current = 'saved'
            on_press: root.manager.transition.direction = 'right'
            pos_hint:{'center_x':1, 'center_y':.5}
            size_hint: .2,.5
            background_color:0,1,0,.8
        Button:
            text: 'Exit'
            on_press: root.manager.current = root.Exit()
            on_press: root.manager.transition.direction = 'right'
            pos_hint:{'x':.5, 'center_y':.5}
            size_hint: .1,.3

        Button:
            text: 'Create New Note'
            on_press: root.manager.current = 'new'
            on_press: root.manager.transition.direction = 'right'
            size_hint: .2,.5
            pos_hint:{'center_x':.5, 'center_y':.5}
            background_color:0,1,0,.8


<SavedNote>
    canvas.before:
        Color:
            rgba:(0,0,0,1)
        Rectangle:
            size:self.width,self.height
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.show
            size_hint: 1,1
            background_color:0,.7,.4,.4

        BoxLayout:
            size_hint: 1,.1
            Button:
                text: 'Delete'
                on_press: root.manager.current = root.delete()
                on_press: root.manager.transition.direction ='right'
                background_color:1,.4,.8,.7
            Button:
                text: 'Edit'
                on_press: root.manager.current = root.edit()
                on_press: root.manager.transition.direction = 'right'
                background_color:1,.4,.8,.7
            Button:
                text: 'View'
                on_press: root.manager.current = root.view()
                on_press: root.manager.transition.direction = 'right'
                background_color:1,.4,.8,.7
            Button:
                text: 'Back to Home'
                on_press: root.manager.current = 'noteapp'
                on_press: root.manager.transition.direction = 'right'
                background_color:1,.4,.8,.7
<CreateNote>
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            size:self.width,self.height
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: Title
            background_color:1,1,1,1
            color: 1,0,0,1
            size_hint: 1,.04
        TextInput:
            id: mytext

        BoxLayout:
            size_hint: 1,.1
            Button:
                text: 'Cancel'
                on_press: root.manager.current = 'noteapp'
                on_press: root.manager.transition.direction = 'right'
                background_color:1,0,.8,1

            Button:
                text: 'Save'
                on_press: root.manager.current = root.save()
                on_press: root.manager.transition.direction = 'right'
                background_color:0,1,.8,1

