<WidgetExp>:
    cols: 3
    ToggleButton:
        text: 'OFF'
        on_state: root.togglebutton_click(self)
        disabled: not my_switch.active
    Button:
        text: 'click me'
        on_press: root.button_click(self)
        disabled: not root.enabled

    Label:
        text: root.text
        font_name: 'font4.ttf'
        font_size: dp(70)
        color: 1,.2,.2,1
    Switch:
        id: my_switch
        on_active: root.switch_click(self)
        active: True
    Slider:
        id: my_slider
        min:0
        max: 100
        #on_value: root.slider_value(self)
        orientation: "vertical"
        disabled: not my_switch.active
    BoxLayout:
        orientation: 'vertical'
        ProgressBar:
            value:my_slider.value
        Label:
            text:  str(my_slider.value)
            font_name: 'font4.ttf'
            color: 1,.2,.2,1
    TextInput:
        id: my_text
        text: ''
        on_text_validate: root.validate_textinput(self)
        multiline: False

    Label:
        text: root.text_input




